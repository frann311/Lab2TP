extends layouts/main

block content
  
    main.container 
        h1.text-center= title 
        div.text-right
            a.add-button(href="/") Volver
        ul.task-list
            if pacientes === undefined 
                li 
                    b.text-center no va por ahi
            else if pacientes.length === 0
                li 
                    b.text-center no existen pacientes
            else 
                each paciente in pacientes
                    li
                        h4 #{paciente.nombre}
                        a.delete-button(href=`/add/${paciente.id_paciente}`) Agendar turno


